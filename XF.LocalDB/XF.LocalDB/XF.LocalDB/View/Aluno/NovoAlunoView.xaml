<ContentPage.Content>
    <StackLayout Padding="20">
        <Entry x:Name="txtNome" Placeholder="Nome" />
        <Entry x:Name="txtRM" Placeholder="RM" />
        <Entry x:Name="txtEmail" Placeholder="E-mail" />
        <StackLayout Orientation="Horizontal">
            <Label Text="Aprovado?" />
            <Switch x:Name="IsAprovado" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnSalvar" Text="Salvar"
Clicked="OnSalvar" />
            <Button x:Name="btnCancelar" Text="Cancelar"
Clicked="OnCancelar" />
        </StackLayout>
    </StackLayout>
</ContentPage.Content>